<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
     <%= render 'users/userinfo', user:@user %>
      <%= render 'books/new', book:@book1 %>
      
  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
  <tbody>
  <tr>
  <td>
  <%= image_tag @book.user.get_profile_image(80,80) %><br>
  <%= link_to @book.user.name, user_path(@book.user.id) %></td>
  <td><%= link_to @book.title, book_path %></td>
  <td><%= @book.body %></td>
  <td><% if @book.user_id == current_user.id %></td>
    <td><%= link_to "Edit",edit_book_path(@book), class: "btn btn-success" %></td>
    <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, data: {confirm: '本当に削除しますか？'} %></td>
  <td><% end %></td>
  </tr>
  </tbody>
  </table>
  </div>
  </div>
  </div>
  
