<!-- ユーザーの詳細 -->
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <tr>
    <th>Name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>Introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
  <tr>
    <th><%= link_to 'edit', edit_user_path(current_user) %></th>
  </tr>
  
  <h2>New book</h2>
  <%= form_with model: @book, url:'/books', method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Option</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <h2>Books</h2>
  