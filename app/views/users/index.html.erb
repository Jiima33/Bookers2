<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'users/userinfo', user:@user %>
      <%= render 'books/new', book:@book %>
    </div>
  

<div class="col-md-8">
<table class="table table-hover">
<h2>Users</h2>
  <thead>
    <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
    </tr>
  </thead>
  
  <tbody>
  <% @users.each do |user %>
  <%= image_tag @user.get_profile_image(50,50) %>
  <%= user.name %>
  <%= link_to "Show", "/users/#{user.id}" %>
  <% end %>
 </tbody>
</table>
</div>
</div>
</div>