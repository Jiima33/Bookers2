  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <tr>
    <th>Name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>Introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
  <tr>
    <th><%= link_to 'edit', edit_user_path(current_user) %></th>
  </tr>
  
  <h2>New book</h2>
  <%= form_with model: @book, url:'/books', method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Option</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <div class="col-md-8">
<table class="table book-index">
<h2>Users</h2>
  <thead>
    <th></th>
    <th>image</th>
    <th>name</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <%= image_tag @user.get_profile_image(50,50) %>
    <%= user.name %>
    <%= link_to "Show", "/users/#{user.id}" %>
    <% end %>
 </tbody>